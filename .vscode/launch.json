{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nodemon",
      "program": "${workspaceFolder}/dist/index.js",

      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
