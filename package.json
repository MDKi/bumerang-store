{
  "name": "bumerang-store",
  "version": "1.0.0",
  "description": "A project I'm doing to both learn Express/Mongoose and help my family business with their small clothes store.",
  "main": "dist/index.js",
  "dependencies": {
    "express": "^4.16.3",
    "mongoose": "^5.2.5"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.7",
    "@types/mongoose": "^5.2.19",
    "@types/superagent": "^3.8.4",
    "@types/supertest": "^2.0.6",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "supertest": "^3.1.0",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.3"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start-pi": "NODE_ENV='pi' node dist/index.js",
    "debug": "NODE_ENV='test' nodemon dist/index.js",
    "test": "NODE_ENV='test' jest --watch --runInBand"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "repository": "https://github.com/MDKi/bumerang-store",
  "author": "Gabriel Fuertes",
  "license": "MIT"
}
